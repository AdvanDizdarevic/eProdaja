<Page
    x:Class="eProdaja_Mob.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:eProdaja_Mob"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
<Grid x:Name="Layout" Style="{StaticResource LayoutGridStyle}">
    
    <StackPanel VerticalAlignment="Center" Width="300">

        <TextBlock Text="eBookStore::Login" FontSize="25" VerticalAlignment="Top" />
        <TextBox Name="korisnickoImeInput" Text="mobile" Header="Korisničko ime:" />
        <PasswordBox Name="lozinkaInput"  Password="test" Header="Lozinka:" />
        <Grid>
            <Button Name="registracijaButton" Content="Registracija" HorizontalAlignment="Left" Click="registracijaButton_Click"></Button>
            <Button Name="prijavaButton" Content="Prijava" Click="prijavaButton_Click" HorizontalAlignment="Right" VerticalAlignment="Top" />
        </Grid>

    </StackPanel>
    </Grid>
</Page>
