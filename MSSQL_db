CREATE PROCEDURE [dbo].[esp_Dobavljaci_SelectByNaziv_KOsoba]
(
	@Naziv NVARCHAR(100)
)
AS
SELECT *
FROM [dbo].[Dobavljaci]
WHERE (LOWER(Naziv) LIKE LOWER(@Naziv) + '%' OR LOWER(KontaktOsoba) LIKE LOWER(@Naziv) + '%') AND Status = 1
