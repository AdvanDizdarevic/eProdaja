FROM Kupci
 WHERE (LOWER(Ime + ' ' + Prezime) LIKE LOWER(@ImePrezime) + '%'
			OR LOWER(Prezime + ' ' + Ime) LIKE LOWER(@ImePrezime) + '%'
			OR LOWER(KorisnickoIme) LIKE LOWER(@ImePrezime) + '%')
			AND Status = 1
GO
